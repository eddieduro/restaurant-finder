<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Cuisine</title>
    </head>
    <body>
        <h1>{{ cuisine.getDescription }}</h1>

        <form action="/cuisines/{{ cuisine.getId }}" method="post">
            <!-- <input name="_method" type="hidden" value="patch"> -->
            <label for="name">Restaurant name:</label>
            <input name="name" type="text">
            <button type="submit">Add Restaurant</button>
        </form>

        <ul>
        {% for restaurant in restaurants %}
            <li>{{ restaurant.getName }}</li><a href="/cuisine/{{ cuisine.getId }}/edit/{{ restaurant.getId }}">Edit</a>
            <form action='/cuisines/{{ cuisine.getId }}/delete/{{ restaurant.getId }}' method="post">
            <input name="_method" type="hidden" value="delete">
                <button type="submit">Delete</button>
            </form>
        {% endfor %}
        </ul>
        <p><a href="/cuisines">Go check cuisines</a></p>

    </body>
</html>
